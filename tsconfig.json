{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "~/utils/*": ["./src/*", "./src/utils/*"]
        },
        "noEmit": true
    },
    "include": ["src/**/*", "./public/helpers.g.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
