{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": { "ignoreUnknown": false, "ignore": [] },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "lineWidth": 100,
        "indentWidth": 4,
        "lineEnding": "lf",
        "useEditorconfig": true
    },
    "organizeImports": { "enabled": true },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noDefaultExport": "error",
                "noVar": "off"
            },
            "suspicious": {
                "noExplicitAny": "warn"
            }
        }
    },
    "javascript": { "formatter": { "enabled": false }, "linter": { "enabled": false } }
}
